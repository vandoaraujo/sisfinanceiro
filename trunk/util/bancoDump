create table Despesa (id integer generated by default as identity (start with 1), despesaFixa bit not null, nomeDespesa varchar(255), primary key (id))
create table DespesaUsuarioPeriodo (id integer generated by default as identity (start with 1), informacao varchar(255), valor double not null, despesa_id integer, periodo_id integer, usuario_id integer, primary key (id))
create table Periodo (id integer generated by default as identity (start with 1), ano integer not null, mes integer not null, primary key (id))
create table Receita (id integer generated by default as identity (start with 1), nomeReceita varchar(255), primary key (id))
create table ReceitaUsuarioPeriodo (id integer generated by default as identity (start with 1), informacao varchar(255), valor double not null, periodo_id integer, receita_id integer, usuario_id integer, primary key (id))
create table Usuario (idUsuario integer generated by default as identity (start with 1), dataCadastro timestamp, login varchar(255), nome varchar(255), senha varchar(255), primary key (idUsuario))
alter table DespesaUsuarioPeriodo add constraint FK430A891521B816F2 foreign key (usuario_id) references Periodo
